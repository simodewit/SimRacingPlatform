<Page
    x:Class="SimRacingPlatform.Pages.Tool2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimRacingPlatform.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="16"
            MaxWidth="420">

            <ProgressRing
                IsActive="True"
                Width="48"
                Height="48" />

            <TextBlock
                Text="Work in Progress"
                FontSize="28"
                FontWeight="SemiBold"
                TextAlignment="Center" />

            <TextBlock
                Text="This section of the app is still under development in WinUI 3.\nPlease check back later."
                FontSize="14"
                Opacity="0.8"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <InfoBar
                IsOpen="True"
                IsClosable="False"
                Severity="Informational"
                Title="Heads up"
                Message="Some features may be incomplete or change without notice." />
        </StackPanel>
    </Grid>
</Page>
