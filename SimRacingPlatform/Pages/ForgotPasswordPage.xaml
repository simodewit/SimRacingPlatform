<Page
    x:Class="SimRacingPlatform.Pages.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="420"
            MaxWidth="520"
            Padding="28"
            CornerRadius="18"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1">

            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Spacing="14">

                <!-- Logo -->
                <Image
                    Height="72"
                    HorizontalAlignment="Center"
                    Stretch="Uniform"
                    Source="ms-appx:///Assets/SquareLogo.png" />

                <!-- Title + subtitle -->
                <StackPanel Spacing="4" HorizontalAlignment="Center">
                    <TextBlock
                        Text="Reset your password"
                        FontSize="24"
                        FontWeight="SemiBold"
                        TextAlignment="Center" />
                    <TextBlock
                        Text="Enter your email and we’ll send you a reset link."
                        TextAlignment="Center"
                        Opacity="0.75" />
                </StackPanel>

                <!-- Email -->
                <TextBox
                    x:Name="EmailBox"
                    Header="Email"
                    PlaceholderText="you@example.com"
                    Margin="0,10,0,0" />

                <!-- Primary action -->
                <Button
                    x:Name="SendButton"
                    Content="Send reset email"
                    CornerRadius="10"
                    Height="40"
                    Margin="0,8,0,0"
                    Style="{ThemeResource AccentButtonStyle}"
                    Click="SendResetEmailClick" />

                <!-- Sent message -->
                <InfoBar
                    x:Name="SentInfoBar"
                    IsOpen="False"
                    IsClosable="False"
                    Severity="Success"
                    Title="Email sent"
                    Message="If an account exists for that email, you’ll receive a reset link shortly."
                    Margin="0,4,0,0" />

                <!-- Error / status text (optional, matches your login page style) -->
                <TextBlock
                    x:Name="StatusText"
                    Text=""
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    TextAlignment="Center"
                    Visibility="Collapsed"
                    Margin="0,4,0,0" />

                <!-- Secondary actions -->
                <StackPanel Spacing="10" Margin="0,6,0,0">
                    <Button
                        x:Name="SendAgainButton"
                        Content="Send again"
                        CornerRadius="10"
                        Height="40"
                        IsEnabled="False"
                        Click="SendAgainClick" />

                    <Button
                        Content="Back to login"
                        CornerRadius="10"
                        Height="40"
                        Click="BackToLoginClick" />
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
