<Page
    x:Class="SimRacingPlatform.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Fixed-height root grid to match AccountPage behavior -->
    <Grid Height="600" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Padding="12,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Width="40" Height="40"
                    Click="BackButton_Click"
                    CornerRadius="20"
                    ToolTipService.ToolTip="Back">
                <FontIcon Glyph="&#xE72B;" FontFamily="Segoe MDL2 Assets"/>
            </Button>

            <!-- Title: Settings -->
            <TextBlock Grid.Column="1"
                       Text="Settings"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"/>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <Grid Padding="12,8,12,24">
                <!-- Same panel/card size & style as AccountPage -->
                <Border MinWidth="400"
                        HorizontalAlignment="Center"
                        CornerRadius="16"
                        Padding="18"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                    <!-- Simple message -->
                    <Grid>
                        <TextBlock Text="There are no settings available for this application yet."
                                   TextWrapping="Wrap"
                                   Opacity="0.8"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="8"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
