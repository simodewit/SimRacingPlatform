<UserControl
    x:Class="SimRacingPlatform.Pages.SideBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:SimRacingPlatform.ViewModels">

    <UserControl.Resources>

        <Style x:Key="SidebarCategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="6,10,0,6" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Opacity" Value="0.7" />
            <Setter Property="CharacterSpacing" Value="120" />
        </Style>

        <!-- Main navigation buttons -->
        <Style x:Key="SidebarNavButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="10,10" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!-- Bottom area buttons -->
        <Style x:Key="SidebarBottomFlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>

    </UserControl.Resources>

    <Grid Padding="14,14,14,14"
          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <!-- Scroll area now starts at the top -->
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scroll area -->
        <Border Grid.Row="0"
                CornerRadius="12"
                Padding="10"
                Background="{x:Bind ScrollAreaBackgroundBrush, Mode=OneWay}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <Button Style="{StaticResource SidebarNavButtonStyle}"
                            Click="Dashboard_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Home"/>
                            <TextBlock Grid.Column="1"
                                       Text="Dashboard"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <TextBlock Text="TOOLS"
                               Style="{StaticResource SidebarCategoryHeaderStyle}" />

                    <Border Height="1"
                            Margin="0,0,0,8"
                            Background="{ThemeResource ControlStrokeColorDefaultBrush}" />

                    <Button Style="{StaticResource SidebarNavButtonStyle}"
                            Click="FirstTool_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Document"/>
                            <TextBlock Grid.Column="1"
                                       Text="FirstTool"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource SidebarNavButtonStyle}"
                            Click="SecondTool_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <SymbolIcon Symbol="Contact"/>
                            <TextBlock Grid.Column="1"
                                       Text="SecondTool"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Bottom: Profile on left, Settings on right -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Profile button -->
            <Button Grid.Column="0"
                    Style="{StaticResource SidebarBottomFlatButtonStyle}"
                    Click="Profile_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <PersonPicture Width="34"
                                   Height="34"
                                   ProfilePicture="{x:Bind vm:UserSessionViewModel.Instance.ProfileImage, Mode=OneWay}"
                                   Initials="{x:Bind vm:UserSessionViewModel.Instance.Initials, Mode=OneWay}" />

                    <StackPanel Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind vm:UserSessionViewModel.Instance.DisplayName, Mode=OneWay}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="View profile"
                                   Opacity="0.7"
                                   FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Button>

            <!-- Settings button -->
            <Button Grid.Column="1"
                    Style="{StaticResource SidebarBottomFlatButtonStyle}"
                    Click="Settings_Click"
                    Margin="8,0,0,0"
                    Width="44"
                    HorizontalContentAlignment="Center">
                <SymbolIcon Symbol="Setting"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
