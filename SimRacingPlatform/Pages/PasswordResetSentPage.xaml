<Page
    x:Class="SimRacingPlatform.Pages.PasswordResetSentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="420"
            MaxWidth="520"
            Padding="28"
            CornerRadius="18"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1">

            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Spacing="16">

                <!-- Logo -->
                <Image
                    Height="72"
                    HorizontalAlignment="Center"
                    Stretch="Uniform"
                    Source="ms-appx:///Assets/SquareLogo.png" />

                <!-- Title + message -->
                <StackPanel Spacing="6" HorizontalAlignment="Center">
                    <TextBlock
                        Text="Check your email"
                        FontSize="24"
                        FontWeight="SemiBold"
                        TextAlignment="Center" />

                    <TextBlock
                        Text="We’ve sent you a password reset link. Please check your inbox and follow the instructions."
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Opacity="0.75" />
                </StackPanel>

                <!-- Info bar -->
                <InfoBar
                    IsOpen="True"
                    IsClosable="False"
                    Severity="Success"
                    Title="Email sent"
                    Message="If an account exists for that email, you’ll receive a reset link shortly."
                    Margin="0,4,0,0" />

                <!-- Actions -->
                <StackPanel Spacing="10" Margin="0,8,0,0">

                    <Button
                        x:Name="ResendButton"
                        Content="Resend email"
                        CornerRadius="10"
                        Height="40"
                        Click="ResendEmailClick" />

                    <Button
                        Content="Back to login"
                        CornerRadius="10"
                        Height="40"
                        Click="BackToLoginClick" />

                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
