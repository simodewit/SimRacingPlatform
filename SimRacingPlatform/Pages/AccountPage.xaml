<Page
    x:Class="SimRacingPlatform.Pages.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="SectionDividerStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Opacity" Value="0.20"/>
            <Setter Property="Background" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
        </Style>

        <!-- Avatar button style with hover overlay -->
        <Style x:Key="AvatarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Width="72" Height="72">
                            <!-- Avatar -->
                            <Ellipse x:Name="AvatarEllipse" Width="72" Height="72">
                                <Ellipse.Fill>
                                    <!-- Bind to ProfileImage on DataContext (AccountViewModel) -->
                                    <ImageBrush ImageSource="{Binding ProfileImage}"
                                                Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Hover/press overlay -->
                            <Border x:Name="Overlay"
                                    CornerRadius="36"
                                    Opacity="0"
                                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="4">
                                        <FontIcon Glyph="&#xE114;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Change"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Visual states must be inside the root element of the template -->
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="Overlay.Opacity" Value="0.75"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="Overlay.Opacity" Value="0.9"/>
                                            <Setter Target="AvatarEllipse.Opacity" Value="0.92"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="Overlay.Opacity" Value="0"/>
                                            <Setter Target="AvatarEllipse.Opacity" Value="0.5"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- Fixed-height root grid -->
    <Grid Height="600" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Padding="12,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Width="40" Height="40"
                    Click="BackButton_Click"
                    CornerRadius="20"
                    ToolTipService.ToolTip="Back">
                <FontIcon Glyph="&#xE72B;" FontFamily="Segoe MDL2 Assets"/>
            </Button>

            <TextBlock Grid.Column="1"
                       Text="Account"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="12,0,0,0"/>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <Grid Padding="12,8,12,24">
                <Border MinWidth="400"
                        HorizontalAlignment="Center"
                        CornerRadius="16"
                        Padding="18"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                    <StackPanel Spacing="18">

                        <!-- Profile -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar with hover + click -->
                            <Grid>
                                <Button Width="72" Height="72"
                                        CornerRadius="36"
                                        DataContext="{x:Bind ViewModel}"
                                        Click="ChangePhoto_Click"
                                        ToolTipService.ToolTip="Change profile picture"
                                        Style="{StaticResource AvatarButtonStyle}"/>
                            </Grid>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                <TextBlock Text="{x:Bind ViewModel.DisplayName}"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind ViewModel.Email}" Opacity="0.75"/>
                            </StackPanel>
                        </Grid>

                        <Border Style="{StaticResource SectionDividerStyle}" />

                        <!-- Security -->
                        <StackPanel Spacing="10">
                            <TextBlock Text="Security" FontSize="16" FontWeight="SemiBold"/>

                            <Button Click="ChangePassword_Click" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE72E;" FontFamily="Segoe MDL2 Assets"/>
                                    <TextBlock Text="Change password"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Border Style="{StaticResource SectionDividerStyle}" />

                        <!-- Account -->
                        <StackPanel Spacing="10">
                            <TextBlock Text="Account" FontSize="16" FontWeight="SemiBold"/>

                            <Button Click="Logout_Click"
                                    HorizontalAlignment="Stretch"
                                    Style="{ThemeResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE8AC;" FontFamily="Segoe MDL2 Assets"/>
                                    <TextBlock Text="Log out"/>
                                </StackPanel>
                            </Button>

                            <Button Click="DeleteAccount_Click"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE74D;" FontFamily="Segoe MDL2 Assets"/>
                                    <TextBlock Text="Delete account"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
